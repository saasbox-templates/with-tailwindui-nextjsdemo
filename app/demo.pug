      }
      
      .crostini .crostini__close-icon_before {
        position: absolute;
        content: '';
        top: 50%;
        left: 50%;
        width: 26px;
        height: 2px;
        margin: -1px 0 0 -13px;
        transform: rotate(-45deg);
        background-color: rgba(255,255,255,.85);
      }
      
      .crostini .crostini__close-icon_after {
        position: absolute;
        content: '';
        top: 50%;
        left: 50%;
        width: 26px;
        height: 2px;
        margin: -1px 0 0 -13px;
        transform: rotate(45deg);
        background-color: rgba(255,255,255,.85);
